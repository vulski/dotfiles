{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "intelephense": {
        "command": "intelephense",
        "args": ["--stdio"],
        "filetypes": ["php"],
        "initializationOptions": {
            "storagePath": "/tmp/intelephense"
        }
    }
  }
}
